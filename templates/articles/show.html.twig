{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <h1>Articles</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ article.Reference }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ article.Designation }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('articles_index') }}" class="btn btn-primary">Voir Liste</a>

    <a href="{{ path('articles_edit', {'id': article.id}) }}" class="btn btn-warning">Modifier</a>

    {{ include('articles/_delete_form.html.twig') }}
{% endblock %}
