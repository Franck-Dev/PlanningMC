function AnnulCTO(ID,Date) {
    alert(ID);
}

function detailsOF(idPlannif,DateP,Cycle) {
    var cibleNbrPcs=document.getElementById(idPlannif);
    $.ajax({
		cache: false,
		type: 'POST',
        data: {date: DateP, prog: Cycle},
		url: "{{ path('Charge_OF') }}",
		success: function(data) 
		{
            $(cibleNbrPcs).tooltip({
                animated: 'fade',
                placement: 'bottom',
                html: true,
                title : data
            });
		}
	});
}
</script>
{% endblock %}