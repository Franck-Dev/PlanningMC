{% extends 'base.html.twig'%}

{% block body %}
    {% if errors is not empty %}
        <div class="alert alert-danger">
            <ul class="list-unstyled mb-0">
                <li><span class="initialism form-error-icon badge badge-danger">Error</span></br> 
                    {% for error in errors %}
                        <span class="form-error-message">{{ error.message}}</span></br>
                    {% endfor %}   
                </li>
            </ul>
        </div>
    {% endif %}
    <h1> Modification de vos donn√©es</h1>
    <div class="d-flex align-items-center justify-content-center vh-80 text-white">
        {{ form_start(form)}}
        <div class="form-row align-items-center">
			<div class="form-group col-md-6">
				{{ form_row(form.username)}}
                {# {{ form_row(form.mail)}} #}
                {{ form_row(form.password)}}
                {{ form_row(form.confirm_password)}}
                {# {{ form_row(form.service)}}
                {{ form_row(form.poste)}} #}
			</div>
            <div class="form-group col-md-6">
				{{ form_row(form.programmeAvion)}}
			</div>
		</div>
        <div class="form-row justify-content-center">
            <div class="form-group">
                <button type="submit" class="btn btn-warning">Modification</button>
            </div>
        </div>    
        
        {{ form_end(form)}}
    </div>
{% endblock %}